<div class="wrapper-page">
  <div class="wrap-body group  page-artist-genre container">
    <div class="wrap-2-col">
      <div class="sidebar no-fixed">
        <ul class="data-list" id="navLeft">
          <li class="profile-row">
            <%= image_tag current_user.image %>
            <a href="#" class="displayname"></a>
          </li>
          <li><a href="#" title="Kênh của tôi">Kênh của tôi</a></li>
          <li><a href="#" title="Playlist cá nhân">Playlist cá nhân</a></li>
          <li><a href="#">Yêu thích</a>
            <ul>
                <li>
                  <a href="#" title="Bài hát">
                    Bài hát <span class="pull-right">(0)</span>
                  </a>
                </li>
                <li>
                  <%= link_to "#" do %>
                    Favorite <span class="pull-right">(<%= @favorites.count %>)</span>
                  <% end %>
                </li>
                <li>
                  <a href="#" title="Video">
                    Video <span class="pull-right">(0)</span>
                  </a>
                </li>
            </ul>
          </li>
          <li>
            <a href="#">Quan tâm</a>
            <ul>
                <li>
                  <a href="#" title="Nghệ sĩ">
                    Nghệ sĩ <span class="pull-right">(0)</span>
                  </a>
                </li>
            </ul>
          </li>
          <li>
            <a href="#" title="Nhạc upload">Nhạc upload</a>
          </li>
        </ul>
      </div>
      <div class="zcontent">
        <div class="title-section has-border-bottom">Favorite Song</div>
          <div class="func-tool group">
              <div class="func-button">
                  <span class="icon-playlist-1"></span>
                  <span class="text-style-1">
                    <a title="Tạo playlist mới" href="#">Tạo playlist mới</a>
                  </span>
              </div>
          </div>
          <div class="clearfix"></div>
          <div class="tab-pane">
            <div class="row">
              <div class="col-12">
                <div class="list-item full-width list-item-canhan">
                  <% @favorites.each do |favorite| %>
                    <% if favorite.user == current_user %>
                      <ul>
                          <li id="playlistIO6898OB" data-name="Nước Ngoài" data-from="my" data-type="playlist" data-id="IO6898OB">
                            <div class="e-item">
                              <a title="Nước Ngoài" href="#" class="thumb pull-left _trackLink" tracking="_frombox=mymusic_myplaylist_">
                                <img src="http://zmp3-photo-td.zadn.vn/skins/zmp3-v4/images/default2/220x220.jpg" alt="Nước Ngoài" height="90" width="90">
                              </a>
                              <h3 class="title-item ">
                                  <%= link_to favorite_path(favorite), class: "txt-primary big-size _trackLink" do %>
                                    <%= favorite.name %>
                                  <% end %>
                              </h3>
                              <p class="title-sd-item">
                                <span class="txt-info">
                                    Ngày tạo: <span class="fn-date"><%= favorite.created_at.strftime("%H:%M %d/%m/%Y") %></span>
                                      <span class="txt-info">Số bài hát: <%= favorite.favorite_songs.count %>
                                      </span>
                                </span>
                              </p>
                              <p class="title-sd-item"><span class="txt-info">Lượt nghe: <%= favorite.count_view %></span></p>
                            </div>
                            <div class="item-tool">
                              <a title="Sửa playlist" href="/mymusic/myplaylist/edit/IO6898OB" class="zicon icon-edit-1"></a>
                              <a title="Xóa playlist" class="zicon icon-remove-2 fn-rmitem" data-item="#playlistIO6898OB">
                              </a>
                            </div>
                          </li>
                      </ul>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
