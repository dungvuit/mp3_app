<% @songs.each_with_index do |song, i| %>
  <div class="songs">
    <div class="row">
      <div class="col-md-2">
        <p><%= i + 1 %></p>
      </div>
      <div class="col-md-7">
        <%= link_to song_path(song) do %>
          <p><%= song.name %></p>
        <% end %>
        <span class="author-song">
          <%= link_to "#" do %>
             <% song.singers.each do |singer| %>
                <%= singer.name %>
             <% end %>
          <% end %>
        </span>
      </div>
      <div class="col-md-3">
        <p><%= song.count_view %></p>
      </div>
    </div>
  </div>
<% end %>
