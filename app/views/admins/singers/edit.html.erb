<% provide :title, t('views.admins.singers.title.edit') %>
<% provide :button_text, t('views.admins.singers.title.save') %>
<div class='main-content'>
  <div class='container'>
    <div class='info-manager'>
      <div class='title-manager pull-left'>
        <h2><%= t 'views.admins.singers.title.edit' %></h2>
      </div>
      <div class='button-manager pull-right'>
        <ul>
          <li>
            <%= link_to new_admins_singer_path do %>
              <i class='glyphicon glyphicon-plus'></i>
              <%= t 'button.create' %>
            <% end %>
          </li>
          <li>
            <%= link_to admins_singers_path(format: 'xls') do %>
              <i class='glyphicon glyphicon-export'></i>
              <%= t 'button.export' %>
            <% end %>
          </li>
        </ul>
      </div>
      <div class='clearfix'></div>
    </div>
    <div class='form-wrap'>
      <%= render 'form' %>
    </div>
  </div>
</div>
