<%= form_for [:admins, @singer] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3'>
      <div class='form-group row'>
        <div class='col-md-4'>
          <%= f.label :name, t('views.admins.singers.text_form.name'),
            class: 'col-form-label' %>
        </div>
        <div class='col-md-6'>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class='form-group row'>
        <div class='col-md-4'>
          <%= f.label :picture, t('views.admins.singers.text_form.images'),
            class: 'col-form-label' %>
        </div>
        <div class='col-md-6'>
          <%= f.file_field :picture %>
        </div>
      </div>
      <div class='form-group row'>
        <div class='col-md-4'>
          <%= f.label :date_of_birth, t('views.admins.singers.text_form.dob'),
            class: 'col-form-label' %>
        </div>
        <div class='col-md-6'>
          <%= f.date_field :date_of_birth, class: 'form-control',
            data: {provide: :datepicker, date_format: 'yyyy/mm/dd'} %>
        </div>
      </div>
      <div class='form-group row'>
        <div class='col-md-4'>
          <%= f.label :gender, t('views.admins.singers.text_form.gender'),
            class: 'col-form-label' %>
        </div>
        <div class='col-md-6'>
          <%= f.select :gender, @gender %>
        </div>
      </div>
      <div class='form-group row'>
        <div class='col-md-4'>
          <%= f.label :address, t('views.admins.singers.text_form.address'),
            class: 'col-form-label' %>
        </div>
        <div class='col-md-6'>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>
    </div>
  <div class='row'>
    <div class='form-group'>
      <div class='col-md-6 col-md-offset-5'>
        <%= f.submit yield(:button_text), class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>
