<% provide :title, t("views.admins.users.title.index") %>
<div class="main-content">
  <div class="container">
    <div class="info-manager">
      <div class="title-manager pull-left">
        <h2><%= t "views.admins.users.title.index" %></h2>
      </div>
      <div class="button-manager pull-right">
        <ul>
          <li>
            <%= link_to new_admins_user_path do %>
              <i class="glyphicon glyphicon-plus"></i>
              <%= t "button.create" %>
            <% end %>
          </li>
          <li>
            <%= link_to admins_users_path(format: "xls") do %>
              <i class="glyphicon glyphicon-export"></i>
              <%= t "button.export" %>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="row wrap-search-user">
      <div class="col-md-12">
        <%= form_tag admins_users_path, method: :get, remote: true do %>
          <div class="form-group pull-left">
            <%= text_field_tag :search, params[:search],
              placeholder: "Input User Name" %>
            <%= button_tag "Search", class: "custom-btn" do %>
              <span class="glyphicon glyphicon-search"></span>
            <% end %>
          </div>
          <div class="form-group pull-right">
            <div class="col-md-offset-2">
              <%= check_box_tag :search_by_permision, "t" %>&nbsp;
              <%= t "views.form.admin" %>&nbsp;
              <%= check_box_tag :search_by_permision, "f" %>&nbsp;
              <%= t "views.form.user" %>&nbsp;
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <%= render "list_user" %>
      </table>
    </div>
  </div>
</div>
