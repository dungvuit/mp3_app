<%= form_for [:admins, @album], remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-md-8"">
      <div class="form-group row">
        <div class="col-md-5">
          <%= f.label :name, t("views.admins.albums.text_form.name"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-5">
          <%= f.label :picture, t("views.admins.albums.text_form.images"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.file_field :picture %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-5">
          <%= f.label :singer_id, t("views.admins.singers.text_form.name"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.select :singer_id, @supports.singers %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-5">
          <%= f.label :categories, t("views.admins.categories.text_form.name"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.select :category_ids, @supports.categories %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-7 col-md-offset-5">
          <%= f.submit button_to, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

