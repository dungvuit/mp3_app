<%= form_for [:admins, @album] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3"">
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :name, t("views.admins.albums.text_form.name"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :singer_id, t("views.admins.singers.text_form.name"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-6">
          <%= f.select :singer_id, @supports.singers %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-6 col-md-offset-4">
          <%= f.submit yield(:button_text), class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
