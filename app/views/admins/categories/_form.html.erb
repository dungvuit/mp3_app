<%= form_for [:admins, @category], remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-md-8"">
      <div class="form-group row">
        <div class="col-md-4">
          <%= f.label :name, t("views.admins.categories.text_form.name"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
          <%= f.submit button_to, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
