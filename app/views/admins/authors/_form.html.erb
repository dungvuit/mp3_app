<%= form_for [:admins, @author], remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="row">
    <div class="col-md-8"">
      <div class="form-group row">
        <div class="col-md-5">
          <%= f.label :name, t("views.admins.authors.text_form.name"),
            class: "col-form-label" %>
        </div>
        <div class="col-md-7">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-7 col-md-offset-5">
          <%= f.submit button_to, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
